<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ProfileActivity">

        <LinearLayout
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txtUsername"
                android:text="Username"
                android:minHeight="32dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtNoHp"
                android:text="No Telpon"
                android:minHeight="32dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtEmail"
                android:text="Email"
                android:minHeight="32dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_computer_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtJenisKelamin"
                android:text="Jenis Kelamin"
                android:minHeight="32dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_people_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/edit_password_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Edit Password" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Akun"
        android:visibility="invisible"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/delete_akun_btn"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account"/>
</LinearLayout>
