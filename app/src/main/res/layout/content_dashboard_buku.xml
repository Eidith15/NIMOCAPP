<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_buku"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardBukuActivity"
    tools:showIn="@layout/app_bar_dashboard_buku">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70">

        </com.github.mikephil.charting.charts.PieChart>
        <LinearLayout
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_weight="50"
                android:layout_width="0dp"
                android:backgroundTint="@android:color/white"
                android:foreground="@drawable/ic_remove_circle_black_24dp"
                android:foregroundTint="@color/colorAccent"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_weight="50"
                android:layout_width="0dp"
                android:backgroundTint="@android:color/white"
                android:foreground="@drawable/ic_add_circle_black_24dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>