<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/contentLayout"
        android:layout_marginStart="51dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo_nimoc_black" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle1"
        android:layout_toEndOf="@+id/logo"
        android:text="A Finance Management"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textTitle2"
        android:layout_alignTop="@+id/logo"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:text="NiMoC"
        android:textColor="#000000"
        android:textSize="32dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnLoginMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignStart="@+id/contentLayout"
        android:layout_below="@+id/logo"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnSignUpMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contentLayout"
        android:layout_alignEnd="@+id/contentLayout"
        android:layout_toEndOf="@+id/btnLoginMenu"
        android:background="?attr/colorButtonNormal"
        android:text="Sign Up"
        android:textSize="24dp" />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnLoginMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary">

    </RelativeLayout>
</RelativeLayout>